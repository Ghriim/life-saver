{% extends 'admin/base-admin.html.twig' %}

{% block page_content %}
    {{ form_start(form) }}
    <div>
        Movement
        {{ form_widget(form.movement) }}
    </div>
    {% for data in ['targetReps', 'targetWeight', 'targetDuration', 'targetDistance', 'targetRest'] %}
        {% set dataValue = attribute(form, data) %}
        <div>
            {{ data }}
            {{ form_widget(dataValue) }}
        </div>
    {% endfor %}
    <div>
        Generate warmup
        {{ form_widget(form.generateWarmup) }}
    </div>
    <div>
        <a href="{{ path('page_admin_routine_details', {routineId: routineId}) }}" class="button cancel-color">Cancel</a>
        <button type="submit" class="button action-color">Add</button>
    </div>
    {{ form_end(form) }}
{% endblock %}