{% extends 'base.html.twig' %}

{% block body %}
    <div class="row justify-content-center">
        <div class="col-md-3 min-vh-100">

            <form action="{{ path('page_login_by_email') }}" method="POST">
                <div class="card">
                    <header class="card-header">
                        <div class="card-title">Login</div>
                    </header>
                    <div class="card-body">
                        <div class="form-field">
                            <label for="username">Email:</label>
                            <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}">
                        </div>

                        <div class="form-field">
                            <label for="password">Password:</label>
                            <input class="form-control" type="password" id="password" name="_password">
                        </div>

                        <div class="form-field">
                            No account ? <a href="{{ path('page_register_by_email') }}">Register here.</a>
                        </div>

                        <input type="hidden" name="_target_path" value="{{ path('page_player_dashboard') }}">

                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    </div>

                    <footer class="card-footer">
                        <button type="submit" class="">Login</button>
                    </footer>
                </div>
            </form>

            {% if error %}
                <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
        </div>
    </div>

{% endblock %}
