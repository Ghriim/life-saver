        Set type
        {{ form_widget(form.setType) }}
    </div>

    <br />

    <div>
        <div>
            <a href="{{ path('page_player_workout_details', {workoutId: workoutId, redirect: redirect}) }}" class="button cancel-color">Cancel</a>
