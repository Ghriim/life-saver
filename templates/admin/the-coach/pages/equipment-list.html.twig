{% extends 'admin/base-admin.html.twig' %}

{% block page_content %}
    <div>
        {{ form_start(form) }}
        <div>
            Name
            {{ form_widget(form.name) }}
        </div>
        <div>
            <button type="submit" class="button action-color">Search</button>
        </div>
        {{ form_end(form) }}
    </div>

    <div>
        <a href="{{ path('page_admin_equipment_add') }}" title="">Add new Equipment</a>
    </div>


    {% for equipment in equipments %}
        <article>
            <ul>
                <li>
                    <a href="{{ path('page_admin_equipment_edit', {equipmentId: equipment.id}) }}" title="">{{ equipment.name }}</a>
                </li>
                <li>Added: {{ equipment.added }}</li>
                <li>
                    <ul>
                        <li>
                            <a href="{{ path('page_admin_equipment_edit', {equipmentId: equipment.id}) }}" title="">Edit</a>
                        </li>
                        <li>
                            <a href="{{ path('page_admin_equipment_delete', {equipmentId: equipment.id}) }}" title="">Delete</a>
                        </li>
                    </ul>
                </li>
            </ul>
        </article>
    {% endfor %}
{% endblock %}