{% extends 'admin/base-admin.html.twig' %}

{% block page_content %}
    <div>
        {{ form_start(form) }}
        <div>
            Name
            {{ form_widget(form.name) }}
        </div>
        <div>
            <a href="{{ path('page_admin_movements') }}" class="button cancel-color">Cancel</a>
            <button type="submit" class="button action-color">Search</button>
        </div>
        {{ form_end(form) }}
    </div>

    <div>
        <a href="{{ path('page_admin_movement_add') }}" title="">Add new Movement</a>
    </div>


    {% for movement in movements %}
        <article>
            <ul>
                <li>
                    <a href="{{ path('page_admin_movement_edit', {movementId: movement.id}) }}" title="">{{ movement.name }}</a>
                </li>
                <li>Added: {{ movement.added }}</li>
                <li>
                    <ul>
                        <li>
                            <a href="{{ path('page_admin_movement_edit', {movementId: movement.id}) }}" title="">Edit</a>
                        </li>
                        <li>
                            <a href="{{ path('page_admin_movement_delete', {movementId: movement.id}) }}" title="">Delete</a>
                        </li>
                    </ul>
                </li>
            </ul>
        </article>
    {% endfor %}
{% endblock %}